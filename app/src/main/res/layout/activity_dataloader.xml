<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="0dp"
    android:background="@android:color/white"
    tools:context="com.baswarajmamidgi.notemaker.Dataloader"
    android:gravity="top"
    tools:ignore="RtlHardcoded,RtlSymmetry">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:logo="@drawable/ic_create_black_24dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:inputType="none|textMultiLine|textLongMessage"
            android:ems="10"
            android:gravity="top"
            android:hint="Enter the content "
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="true"
        tools:ignore="HardcodedText,UnknownId,UnusedAttribute"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/black"
        android:textSize="18sp"
        android:textColorHint="@android:color/black"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textCursorDrawable="@null"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif" />
    </FrameLayout>
</RelativeLayout>

